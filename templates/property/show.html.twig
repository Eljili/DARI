{% extends 'base.html.twig'%}

{%block title property.title %}
{% block body %}

<div class="jumbotron">
        <div class="container ">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">
                    <h1> {{property.title}} </h1>
                    <h2> {{property.rooms}} piece - {{property.surface}} m²</h2>
                        
                    <div class="text.primary" style="font-size : 2rem;font-weight:bold;"> {{property.formattedPrice}} FCFA</div>
                             <a href="#" class="btn btn-primary" > Contacter l'agence </a>
                </div>
            </div>
        </div>
    </div>

<div class="container mt-4">
        <p> {{property.description | nl2br }} </p>
          
            <div class="row">
                <div class="col-md-8">
                    <table class="table table-striped ">
                            <tbody>
                                <tr>
                                    <td scope="row">Surface Habitable</td>
                                    <td> {{property.surface}} </td>
                                    
                                </tr>
                                <tr>
                                    <td scope="row">Piéce</td>
                                    <td>{{property.rooms}}</td>

                                </tr>
                                 <tr>
                                    <td scope="row">Chambre</td>
                                    <td>{{property.bedrooms}}</td>
                                    
                                </tr>
                                 <tr>
                                    <td scope="row">Etage</td>
                                    <td>{{property.floor}}</td>
                                    
                                </tr>
                                 <tr>
                                    <td scope="row">Climatisation</td>
                                    <td>{{property.TypeHeat}}</td>
                                    
                                </tr>
                            </tbody>
                    </table>
                </div>
                    <div class="col-md-4">
                        Spécificités
                    </div>
                    
            
            </div>

</div>

{% endblock %}